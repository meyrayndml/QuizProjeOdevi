@model MyQuizProject.Models.Question
@{
    ViewBag.Title = "Delete Question";
}

<h2>Delete Question</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Text
        </dd>
        <dt class="col-sm-2">
            Correct Answer
        </dt>
        <dd class="col-sm-10">
            @Model.CorrectAnswer
        </dd>
        <dt class="col-sm-2">
            Points
        </dt>
        <dd class="col-sm-10">
            @Model.Points
        </dd>
        <dt class="col-sm-2">
            QuizId
        </dt>
        <dd class="col-sm-10">
            @Model.QuizId
        </dd>
        <dt class="col-sm-2">
            OptionA
        </dt>
        <dd class="col-sm-10">
            @Model.OptionA
        </dd>
        <dt class="col-sm-2">
            OptionB
        </dt>
        <dd class="col-sm-10">
            @Model.OptionB
        </dd>
        <dt class="col-sm-2">
            OptionC
        </dt>
        <dd class="col-sm-10">
            @Model.OptionC
        </dd>
        <dt class="col-sm-2">
            OptionD
        </dt>
        <dd class="col-sm-10">
            @Model.OptionD
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-default">Back to List</a>
        </div>
    </form>
</div>
